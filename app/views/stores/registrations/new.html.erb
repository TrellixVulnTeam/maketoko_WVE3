<div class="container store_sign_in">
<h2>店舗会員新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "stores/shared/error_messages", resource: resource %>

  <div class="field store_sign_in_box">
    <%= f.label :corporation_name, "会社名" %><br />
    <%= f.text_field :corporation_name, autofocus: true, autocomplete: "corporation_name", :placeholder =>"マケトコ", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "店舗名"%><br />
    <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name", :placeholder =>"大阪店", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "郵便番号(ハイフンなし7桁)"%><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete:"postal_code",:placeholder =>"5551111", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete:"address", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "店舗地域タグ" %><br />
    <%= f.collection_select :area_id, Area.all, :id, :area_name %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "電話番号(ハイフンなし10or11桁)" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",:placeholder =>"0611112222", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "パスワード" %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-3" %><br />
  </div>

  <div class="field store_sign_in_box">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-3" %><br />
  </div>

  <div class="actions store_sign_in_btn">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
  <p>こちらから　<%= link_to "ログイン", new_store_session_path, class: "btn btn-primary" %></p>
</div>


