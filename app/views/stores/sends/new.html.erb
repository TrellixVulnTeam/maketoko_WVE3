<div class="container send-new">
	<div class="row">
		<h2>新規投稿</h2>

		<%= form_for(@send, url:sends_path) do |f| %>

		<% if @send.errors.any? %>
  			<div id="error_explanation">
    		<h2>error: <%= @send.errors.count %></h2>
    			<ul>
    				<% @send.errors.full_messages.each do |message| %>
      					<li><%= message %></li>
    				<% end %>
    			</ul>
  			</div>
  		<% end %>

  		
  		<div class="row send-new-image">
  		<%= f.attachment_field :send_image, placeholder: "画像" %>
  		</div>

  		<div class="row send-new-comment">
  		<p>投稿内容</p>
  		<%= f.text_area :send_comment, class: "col-xs-6" %>
  		</div>

  		<div class="row send-new-submit">
  			<%= f.submit "送信", class: "btn btn-success" %>
  		</div>

  		<% end %>

  	</div>
  </div>