<div class="container send-edit">
	<div class="row">

		<%= form_for(@send, url:send_path) do |f| %>
			<h2>投稿編集ページ</h2>

				<div class="send-edit-image">
					<%= f.attachment_field :send_image %>
				</div>

				<div class="send-edit-comment">
					<%= f.text_area :send_comment, class: "col-xs-6" %>
				</div>

				<div class="send-edit-submit">
					<%= f.submit "変更を保存", class: "btn btn-primary" %>
				</div>


		<% end %>


	</div>
</div>