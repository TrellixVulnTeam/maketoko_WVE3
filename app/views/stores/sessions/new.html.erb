<div class="container sign_up">
<h2>店舗ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field, sign_up_box">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %><br />
  </div>

  <div class="field, sign_up_box">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-3" %><br />
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field, sign_up_box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-success" %> <br />
  </div>
<% end %>

<h4>まだ登録がお済みでない方</h4>
  <p>こちらから　<%= link_to "新規登録", new_store_registration_path, class: "btn btn-primary" %></p>
</div>