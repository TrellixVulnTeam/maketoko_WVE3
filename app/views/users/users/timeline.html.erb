<div class="container store-index">
	<div class="row">
		<div class="col-xs-8">

			<div class="col-xs-12 store_send-index">
				<% @sends.each do |send| %>
					<div class="store-sends">
						<div class="store_send_top">

							<%= attachment_image_tag send.store, :store_image, format: "jpeg", size: "50x50", fallback: asset_path("no-image.jpeg"), size:'50x50' %>

							<%= send.store.corporation_name %>　<%= send.store.store_name %>
						</div>

						<div class="store_send_bottom">

							<%= attachment_image_tag send, :send_image, format: "jpeg", size: "300x250", fallback: asset_path("not-image.jpeg"), size:'300x250' %>

							<div class="store-send-bottom-insite">
								<h4><%= send.title %></h4>
								<p><%= send.send_comment %></p>
							</div>
						</div>
							<div class="store_send_create">
								<p>投稿時間:　<%= l send.created_at %></p>
							</div>
					</div>
				<% end %>
			</div>
		</div>

	<div class="row">
		<div class="col-xs-4 side-bar">

			<div class="timeline-follow">
				<% @relationship_stores.each do |r_store| %>
					<div class="timeline-follow-box">

					<%= attachment_image_tag r_store, :store_image, format: "jpeg", size: "50x50", fallback: asset_path("no-image.jpeg"), size:'50x50' %>

					<%= r_store.corporation_name %>　<%= r_store.store_name %>
					<p><%= link_to "店舗詳細", users_store_path(r_store), class: "btn btn-primary" %></p>
				</div>
				<% end %>
			</div>
		</div>
	</div>



	</div>
</div>